JWT_SECRET=generate-jwt-secret-here
SESSION_SECRET=generate-session-secret-here

# ========================================
# üíæ BACKUP CONFIGURATION
# ========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=""
BACKUP_S3_ACCESS_KEY=""
