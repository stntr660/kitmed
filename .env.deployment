# ========================================
# üöÄ DEPLOYMENT OPTIONS
# ========================================
AUTO_DEPLOY_ENABLED=true
HEALTH_CHECK_URL=https://your-domain.com
ROLLBACK_ON_FAILURE=true

# ========================================
# üìä MONITORING (Optional)
# ========================================
