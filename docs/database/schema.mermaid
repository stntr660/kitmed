        String websiteUrl "nullable"
        String logoUrl "nullable"
        Boolean isFeatured
        Int sortOrder
        String status
        DateTime createdAt
        DateTime updatedAt
        PartnerTranslation translations
    }

    PartnerTranslation {
        String id PK
