        DateTime createdAt
    }

    ActivityLog {
        String id PK
        String userId "nullable"
        String action
        String resourceType
        String resourceId "nullable"
        Json details "nullable"
        String ipAddress "nullable"
        String userAgent "nullable"
        DateTime createdAt
    }

    PageView {
        String id PK
        String pagePath
