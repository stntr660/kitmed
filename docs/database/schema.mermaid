        String userAgent "nullable"
        String ipAddress "nullable"
        String sessionId "nullable"
        DateTime createdAt
    }

    %% Relationships
    Category ||--o{ Product : "categorizes"
    Category ||--o{ Category : "parent-child"
    Product ||--o{ ProductTranslation : "translates"
    Product ||--o{ ProductMedia : "has media"
    Product ||--o{ ProductAttribute : "has attributes"
    Product ||--o{ RFPItem : "requested in"
    RFPRequest ||--o{ RFPItem : "contains"
    Partner ||--o{ PartnerTranslation : "translates"
    Page ||--o{ PageTranslation : "translates"
    Banner ||--o{ BannerTranslation : "translates"
    User ||--o{ UserSession : "has sessions"
    User ||--o{ ActivityLog : "logs activity"
    Category ||--o{ CategoryTranslation : "translates"
