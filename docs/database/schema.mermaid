erDiagram

    Category {
        String id PK
        String name
        String slug UK
        String description "nullable"
        String parentId "nullable"
        Int sortOrder
        Boolean isActive
        String metaTitle "nullable"
        String metaDescription "nullable"
        String imageUrl "nullable"
        DateTime createdAt
        DateTime updatedAt
        Product products
        CategoryTranslation translations
    }

    CategoryTranslation {
        String id PK
        String categoryId
        String languageCode
        String name
        String description "nullable"
        String metaTitle "nullable"
        String metaDescription "nullable"
    }

    Product {
        String id PK
        String sku UK
        String categoryId
        String name
        String slug UK
        String shortDescription "nullable"
        String longDescription "nullable"
        Json specifications "nullable"
        String status
        Boolean isFeatured
        Int sortOrder
        String metaTitle "nullable"
        String metaDescription "nullable"
        DateTime createdAt
        DateTime updatedAt
        ProductTranslation translations
        ProductMedia media
        ProductAttribute attributes
        RFPItem rfpItems
    }

    ProductTranslation {
        String id PK
        String productId
        String languageCode
        String name
        String shortDescription "nullable"
        String longDescription "nullable"
        Json specifications "nullable"
        String metaTitle "nullable"
        String metaDescription "nullable"
    }

    ProductMedia {
        String id PK
        String productId
        String type
        String url
        String altText "nullable"
        String title "nullable"
        Int sortOrder
        Boolean isPrimary
        DateTime createdAt
    }

    ProductAttribute {
        String id PK
        String productId
        String name
        String value
        String type
        Int sortOrder
    }

    RFPRequest {
        String id PK
        String referenceNumber UK
        String status
        String customerName
        String customerEmail
        String customerPhone "nullable"
        String companyName "nullable"
        String companyAddress "nullable"
        String contactPerson "nullable"
        String message "nullable"
        String urgencyLevel
        String preferredContactMethod
        String assignedTo "nullable"
        String notes "nullable"
        Decimal quoteAmount "nullable"
        DateTime quoteValidUntil "nullable"
        DateTime createdAt
        DateTime updatedAt
        RFPItem items
    }

    RFPItem {
        String id PK
        String rfpId
        String productId
        Int quantity
        String specialRequirements "nullable"
        Decimal quotedPrice "nullable"
        DateTime createdAt
    }

    Partner {
        String id PK
